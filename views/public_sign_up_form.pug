extends layout_public

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text' placeholder='First name' name='first_name' required='true' value=(undefined===user ? '' : user.first_name) )
    div.form-group
      label(for='family_name') Family Name:
      input#family_name.form-control(type='text' placeholder='Family name' name='family_name' required='true' value=(undefined===user ? '' : user.family_name))
    div.form-group
      label(for='date_of_birth') Date of birth:
      input#date_of_birth.form-control(type='date' name='date_of_birth' value=(undefined===user ? '' : user.date_of_birth_yyyy_mm_dd) )
    div.form-group
      label(for='email_address') Email Address:
      input#email_address.form-control(type='email' name='email_address' value=(undefined===user ? '' : user.email_address) )
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password' name='password' value=(undefined===user ? '' : user.password) )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg